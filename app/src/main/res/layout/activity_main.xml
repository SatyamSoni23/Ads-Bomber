<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_bar">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@android:color/white"
                android:background="?attr/colorPrimary"
                app:navigationIcon="@drawable/ic_side_navigation"
                app:title="@string/app_name">
            </androidx.appcompat.widget.Toolbar>
            <ScrollView
                android:id="@+id/scroll_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/faug"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="FAU-G"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Fearless and United – Guards (FAU-G) is an upcoming online multiplayer action game created by Bengaluru-headquartered nCore Games and promoted by internet entrepreneur Vishal Gondal. It is set to be launched in India by the end of October 2020"
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/faug_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ad1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/ll1"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                        <!--  This is your template view -->
                        <com.google.android.ads.nativetemplates.TemplateView
                            android:id="@+id/my_template"
                        app:gnt_template_type="@layout/gnt_small_template_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ad1"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/dauntless"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Dauntless"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Dauntless is a free-to-play co-op action RPG that’s currently available for PC, PlayStation 4, Xbox One, and Nintendo Switch. The developer said the mobile version of the game is currently in the early concept phase and did not provide an exact timeframe for when it will be released."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/dauntless_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ad2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/ll2"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                    <!--  This is your template view -->
                        <com.google.android.ads.nativetemplates.TemplateView
                            android:id="@+id/my_template1"
                            app:gnt_template_type="@layout/gnt_small_template_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ad2"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/wildrift"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="League of Legends: Wild Rift"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Next up is a long rumored mobile game from Riot Games. League of Legends: Wild Rift was announced alongside a number of new releases during the ten year anniversary celebration of League of Legends. It features the same 5v5 MOBA gameplay as its PC counterpart, with adjustments to make it more mobile-friendly."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/wildRift_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll4"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ll3"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/chronicles"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Summoners War: Chronicles"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Summoners War: Chronicles is a real-time MMORPG that takes place 70 years before the events of the original game. In it, players can select teams of three characters, each of which can summon three monsters. These summoned armies take on massive bosses with the help of other players around the world."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/chronicles_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll5"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ll4"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/pokemon"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Pokémon Unite"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="The standard MOBA formula has been somewhat adapted for Pokémon, with gameplay that favors capturing wild Pokémon and depositing them in certain zones to get points. There are two lanes instead of three and no turrets, but apart from that gameplay appears very similar to popular MOBAS like League of Legends or Dota 2."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/pokemonUnite_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll6"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ll5"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/odessy"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Warhammer: Odyssey"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Fans of the long-time wargaming series Warhammer Age of Sigmar should get excited about this upcoming Android game. Set in the Old World, it’s an MMORPG that allows players to explore some of the most iconic locations in Warhammer lore."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/odyssey_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll7"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ll6"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/apex"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Apex Legends"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="While news about a mobile version of Apex Legends is few and far between, we know for sure that Respawn Entertainment’s hit battle royale title is coming to mobile devices soon. Shortly after the game’s release, devs confirmed that a mobile version is in the works."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/apexLegends_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll8"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ll7"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/h1z1"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="H1Z1"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="H1Z1 is a battle royale game, similar to PUBG and Fortnite. You jump out of an airplane with up to 150 other players and start looking for guns, ammo, and other supplies once you land. Then it’s time to go on the hunt and take down as many opponents as possible. The last one standing wins."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/h1z1_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll9"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ll8"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/immortal"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Diablo Immortal"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="The game lets you choose from six classes (Barbarian, Monk, Wizard, Crusader, Demon Hunter, and Necromancer), with each one having a set of at least 12 skills. You’ll be able to explore and fight in nine outdoors areas and will come across a lot of creatures never seen before in a Diablo title."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/immortal_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll10"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:layout_below="@id/ll9"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:background="@drawable/rect">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/exile"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Path of Exile Mobile"
                            android:textSize = "25dp"
                            android:paddingHorizontal="10dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Coming Soon"
                            android:textSize="16dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="In the official trailer above, it’s revealed that the game is being developed in-house (with some delicious shade being thrown at PoE’s main competitor Diablo’s upcoming mobile title), which should mean that core gameplay elements remain intact."
                            android:textSize="14dp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                        <TextView
                            android:id="@+id/exileMobile_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Know More"
                            android:textSize="13dp"
                            android:layout_marginBottom="8dp"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:paddingHorizontal="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ad3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@id/ll10"
                        android:orientation="vertical"
                        android:layout_margin="10dp">

                    <!--  This is your template view -->
                    <com.google.android.ads.nativetemplates.TemplateView
                        android:id="@+id/my_template2"
                        app:gnt_template_type="@layout/gnt_small_template_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>
        </RelativeLayout>
        <com.google.android.material.navigation.NavigationView
